<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.kodedu.terminalfx.Terminal?>
<AnchorPane fx:id="bottomControlView" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.BottomControlViewController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Button fx:id="buttonRun" mnemonicParsing="false" onAction="#onButtonRunPressed" prefHeight="50.0" prefWidth="50.0" text="Run" />
                    </children>
                </VBox>
                <AnchorPane minHeight="0.0" minWidth="50.0" prefHeight="400.0" prefWidth="550.0" HBox.hgrow="ALWAYS">
                    <children>
                        <gui.panes.ShelledTerminal fx:id="terminal" maxHeight="Infinity" maxWidth="Infinity" prefHeight="200.0" prefWidth="200.0" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
